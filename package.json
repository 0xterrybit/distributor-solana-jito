{
  "name": "distributor-solana",
  "version": "1.0.0",
  "description": "TypeScript SDK for a Solana program for distributing tokens according to a Merkle root.",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "keywords": [
    "solana",
    "blockchain",
    "airdrop",
    "saber"
  ],
  "devDependencies": {
    "@project-serum/anchor": "^0.24.2",
    "@rushstack/eslint-patch": "^1.1.3",
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.1",
    "@types/eslint": "^8.4.3",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.45",
    "bn.js": "^5.2.1",
    "chai": "^4.3.4",
    "eslint": "^8.17.0",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.1",
    "jsbi": "^4.3.0",
    "lint-staged": "^13.0.1",
    "mocha": "^10.0.0",
    "prettier": "^2.6.2",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix",
    "*.{js,jsx,json,html,css,md}": "prettier --write",
    "*.nix": "nixpkgs-fmt"
  },
  "scripts": {
    "build": "tsc -P tsconfig.cjs.json && tsc -P tsconfig.build.json",
    "typecheck": "tsc",
    "lint": "eslint . --cache",
    "test": "anchor test",
    "generate_proof": "sh ./command/1.generate_proof.sh",
    "create_distributor": "sh ./command/2.create_distributo.sh",
    "claim": "sh ./command/4.claim_from_api.sh"
  },
  "dependencies": {
    "merkletreejs": "^0.4.0",
    "@coral-xyz/anchor": "^0.29.0",
    "@solana/spl-token": "0.1.8",
    "@solana/web3.js": "^1.68.0",
    "bs58": "^5.0.0",
    "buffer-layout": "^1.2.2",
    "crypto-js": "^4.2.0",
    "ts-mocha": "^10.0.0"
  },
  "peerDependencies": {
    "chai": "^4.3.4",
    "mocha": "^9.0.3",
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "typescript": "^4.3.5",
    "prettier": "^2.6.2"
  }
}
